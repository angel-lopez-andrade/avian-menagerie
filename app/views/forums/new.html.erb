<%= render "/shared/navbar" %>
<h1>New Post</h1>
<%= form_with model: @forum_post, url: "/breeds/#{params[:breed_id]}/forum", local: true do |form| %>
    <% if @forum_post.errors.any? %>
        <% @forum_post.errors.full_messages.each do |message| %>
            <p><%= message %></p>
        <% end %>
    <% end %>
    <p>
        <%= form.label :user_id, "User ID: " %>
        <%= form.text_field :user_id, readonly: true, value: current_user.id %>
    </p>
    <p>
        <%= form.label :breed_id, "Breed ID: " %>
        <%= form.text_field :breed_id, readonly: true, value: Breed.find(params[:breed_id]).id %>
    </p>
    <p><%= form.label :body, "Type post then click Submit button to post: " %></p>
    <div><%= form.text_area :body, rows: 12, cols: 40 %></div>
    <p><%= form.submit value: "Submit" %></p>
<% end %>